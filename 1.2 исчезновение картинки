<script>
$(document).ready(function () {
$("p[align|='center']").dblclick(function () {
$("p").hide(500);
});
$("#but1").dblclick(function () {
$("p").show(500);
});
});
</script>

</head>
<body>
<button id="but1">нажми 2 раза и появится</button>
